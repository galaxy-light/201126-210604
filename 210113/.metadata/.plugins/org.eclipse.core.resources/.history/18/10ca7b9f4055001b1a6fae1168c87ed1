//하나의 파일 안에 다른 class를 만들 때 public을 붙이면 안됨
class StudentScore{
	private int kor;
	private int eng;
	private int math;
	private int sum;
	private int avg;
	private char harjum;
	
	public void makeRandom() {
		Random r = new Random();
		kor = r.nextInt(101); // 101 : 0 ~ 100까지
		eng = r.nextInt(101); // 101 : 0 ~ 100까지
		math = r.nextInt(101); // 101 : 0 ~ 100까지
	
	}
}
