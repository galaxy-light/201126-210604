
public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int arr[] = {20, 34, 22, 14, 36, 23, 67, 25, 99, 88};
		
		int sum = 0;
		int avg = 0;
		
		for (int i = 0; i < arr.length; i++) {
			sum += arr[i];			
		}
		System.out.println("합 : " + sum);
		avg = sum/10;
		System.out.println("평균 : " + avg);
	}

}
