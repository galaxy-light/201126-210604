
public class TestArray {
	private int sum;
	private double avg;
	
	// 메서드
	public int sum(int arr[]) {
		sum = 0;
		for (int i = 0; i < arr.length; i++) {
			sum += arr[i];
		}
		return sum;
	}
	
	// 메서드
	public double avg(int arr[]) {
		avg = 0;
		avg = (double)sum/arr.length;
		return avg;
	}
	
	// 매개변수
	public TestArray() {		
		super();
		System.out.println("합 : " + sum);
		System.out.println("평균 : " + avg);
	}

	
}
