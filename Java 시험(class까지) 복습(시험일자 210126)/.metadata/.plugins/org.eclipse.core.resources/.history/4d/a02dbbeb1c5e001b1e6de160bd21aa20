// https://blog.naver.com/hack4ork/221671486484
public class Test07_method_07 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int result [];
		result = arr();
		System.out.println("짝수 합 : " + result[0]);
		System.out.println("홀수 합 : " + result[0]);
	}
	
	public static int []arr() {
		int arr[] = new int [2];
		for (int i = 0; i <= 100; i++) {
			if (i%2==0) {
				arr[0] += i; // 0 : 첫번째 칸
			}
			else if (i%2!=0) {
				arr[1] += i; // 1 : 두번째 칸
			}
		}
	
		return arr;
		
	}

}
